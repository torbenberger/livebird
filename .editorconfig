root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,ts,tsx,scss,css}]
indent_size = 2

[*.html]
indent_size = 2

[*.java]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.xml]
indent_size = 4

[*.svg]
trim_trailing_whitespace = false
insert_final_newline = false
